<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ScrollView

        android:fillViewport="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/lion"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scopri le nostre ricette"
        android:textSize="40dp"
        android:textColor="@color/verde"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:text="placheholder per Carosello"
        android:background="@color/black"
        />




        <ImageButton
            android:id="@+id/boxAntipasti"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="antipasti"
            android:src="@drawable/antipasti"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"

            />
        <ImageButton
            android:id="@+id/boxPrimi"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="primi"
            android:background="@drawable/primi"
            android:layout_marginBottom="30dp"

            />
        <ImageButton
            android:id="@+id/boxSecondi"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="secondi"
            android:background="@drawable/secondi"
            android:layout_marginBottom="30dp"

            />
        <ImageButton
            android:id="@+id/boxDessert"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="dessert"
            android:background="@drawable/dessert"
            android:layout_marginBottom="30dp"
            />


    </LinearLayout>

    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        android:layout_gravity="start"
        app:elevation="16dp"
        app:labelVisibilityMode="labeled"
        android:layout_alignParentBottom="true"
        style="@style/BottomNavigation"
        />

    </RelativeLayout>
